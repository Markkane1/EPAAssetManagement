{
  "name": "ams-workspace",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev -w client",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "dev:full": "concurrently -k \"npm run dev:client\" \"npm run dev:server\"",
    "build": "npm run build -w client",
    "build:client": "npm run build -w client",
    "build:server": "npm run build -w server",
    "build:client:budget": "npm run build -w client && node scripts/check-client-bundle.mjs",
    "build:dev": "npm run build:dev -w client",
    "lint": "npm run lint -w client",
    "lint:server": "npm run lint -w server",
    "precommit:checks": "npm run lint && npm run lint:server && npm run build:server && npm run test:security",
    "hooks:install": "git config core.hooksPath .githooks",
    "perf:bundle": "node scripts/check-client-bundle.mjs",
    "phase8:debt": "node scripts/phase8-debt-metrics.mjs",
    "phase8:debt:quick": "node scripts/phase8-debt-metrics.mjs --skip-health-checks",
    "phase8:security": "node scripts/phase8-security-posture.mjs",
    "phase8:security:quick": "node scripts/phase8-security-posture.mjs --skip-runtime-test",
    "phase8:perf": "node scripts/phase8-performance-report.mjs",
    "phase8:monthly": "node scripts/phase8-monthly-ratchet.mjs",
    "phase8:no-regression": "node scripts/phase8-no-regression-check.mjs",
    "phase8:perf:smoke": "npx -w server tsx tests/performance/remaining-read-benchmark.ts --scenario ci-smoke --warmup 2 --iterations 10 --concurrency 3",
    "phase8:acceptance": "npm run lint:server && npm run build -w server && npm run test:security -w server && npm run test:consumables -w server && npm run lint -w client && npm run build -w client && npm run perf:bundle && npm run phase8:perf:smoke && npm run phase8:debt:quick && npm run phase8:security:quick && npm run phase8:no-regression",
    "preview": "npm run preview -w client",
    "test:security": "npm run test:security -w server",
    "test:consumables": "npm run test:consumables -w server"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "overrides": {
    "glob": "^10.5.0",
    "lodash": "^4.17.23"
  }
}
